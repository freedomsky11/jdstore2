<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
       <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag product.image.thumb.url %>
        <% else %>
          <%= image_tag "http://www.glb-re.com/images/no-image.png" %>
        <% end %>
        <br />
        <br />
        <%= product.title %>
      <% end %>
    </div>
  <% end %>
</div>
