<h2>Product List</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新增产品", new_admin_product_path, :class => "btn btn-primary btn-sm") %>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th style="width:200px;">品名</th>
      <th>Name</th>
      <th>Price</th>
      <th style="width:100px;">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <% if product.image.present? %>
            <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
          <% else %>
            <%= image_tag("http://www.glb-re.com/images/no-image.png", class: "thumbnail") %>
          <% end %>
        </td>
        <td>
          <%= product.title %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_product_path(product)) %>
          |
          <%= link_to("Destroy", admin_product_path(product), method: :DELETE) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
